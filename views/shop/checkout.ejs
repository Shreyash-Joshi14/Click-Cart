                    var stripe = Stripe('pk_test_51P4mrPSHcWXYrt3yro4nCHD7J8UHEx2aiyfeffeAqYnJAJxSuirjmul7CzdtM7AfVNc7XjwAgZo9cMyIqvloJWFq00hZdTFvEU');
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', () => {
                        console.log('ordered');
                        stripe.redirectToCheckout({
